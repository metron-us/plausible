{
  "name": "@metron-us/plausible",
  "version": "0.1.0",
  "exports": "./src/mod.ts",
  "publish": {
    "exclude": [
      ".gitignore",
      ".vscode",
      ".claude",
      "node_modules",
      "dist"
    ]
  },
  "tasks": {
    "publish:check": "deno publish --dry-run",
    "test": "deno test --allow-net --allow-env",
    "test:watch": "deno test --watch --allow-net --allow-env",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1"
  }
}
